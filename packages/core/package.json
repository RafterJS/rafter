{
  "name": "@rafter/core",
  "version": "0.1.0",
  "contributors": [
    {
      "name": "Josh Stuart",
      "email": "joshstuartx@gmail.com"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/crimsonronin/rafter.git"
  },
  "scripts": {
    "start": "",
    "test": "jest --notify ./lib",
    "build:lib": "babel --include-dotfiles lib --out-dir dist --extensions .js,.jsx,.ts,.tsx --source-maps",
    "clean": "yarn clean:lib",
    "clean:lib": "rimraf ./dist",
    "build": "yarn clean && yarn build:lib",
    "copy": "copyfiles ./package.json ./dist/package.json",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "test:types": "tsc",
    "lint:eslint": "eslint ./lib lib/index.ts ./rafter.ts",
    "lint:prettier": "prettier --check \"{lib,example}/**/*.{js,jsx,ts,tsx}\" --write \"./rafter.ts\"",
    "prettier": "prettier --write \"{lib,example}/**/*.{js,jsx,ts,tsx}\" --write \"./rafter.ts\""
  },
  "dependencies": {
    "@rafter/di-container": "0.2.2",
    "@rafter/di-autoloader": "0.3.1",
    "express": "4.16.4",
    "recursive-readdir": "2.2.2"
  },
  "description": "A slightly opinionated JS framework that makes building apps easy and testable",
  "main": "./dist/index.js",
  "engines": {
    "node": ">9"
  }
}
