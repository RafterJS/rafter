{
  "name": "@rafterjs/watcher",
  "version": "0.4.2-alpha.0",
  "contributors": [
    {
      "name": "Josh Stuart",
      "email": "joshstuartx@gmail.com"
    }
  ],
  "license": "GNU GPLv3",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshystuart/rafter.git"
  },
  "scripts": {
    "start": "node dist/index.js \"cd ../../ && yarn boilerplate:start\"",
    "start:dev": "nodemon -e ts --watch \"./lib/**/*.ts\" --exec \"yarn build && yarn start\"",
    "build": "yarn clean && yarn build:index && yarn build:lib && yarn build:types",
    "build:index": "babel index.ts --out-dir dist --extensions .js,.jsx,.ts,.tsx --source-maps",
    "build:lib": "babel lib --out-dir dist/lib --extensions .js,.jsx,.ts,.tsx --source-maps",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf ./dist",
    "lint": "eslint \"./lib/**/*\" ./babel.config.js",
    "format": "prettier --write \"lib/**/*.{js,jsx,ts,tsx}\""
  },
  "dependencies": {
    "@rafterjs/logger-plugin": "^0.4.2-alpha.0",
    "chokidar": "^3.4.3",
    "shelljs": "^0.8.4",
    "tree-kill": "^1.2.2",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@rafterjs/babel-preset-rafter": "^0.4.2-alpha.0",
    "@rafterjs/eslint-config": "^0.4.2-alpha.0",
    "@types/chokidar": "^2.1.3",
    "@types/shelljs": "^0.8.8"
  },
  "description": "A watcher that helps you develop within monorepos. No more manual multi-package builds and restarts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "bin": {
    "watch": "./dist/index.js"
  },
  "engines": {
    "node": ">=9"
  },
  "gitHead": "cec73cfa8cbfe5bd8422f1ea53f1711330514cc3"
}
