{
  "name": "@rafterjs/di-autoloader",
  "version": "0.4.2-alpha.3",
  "author": "Josh Stuart <joshstuartx@gmail.com>",
  "description": "An autoloading DI container",
  "keywords": [
    "di",
    "factory",
    "dependency injection",
    "ioc",
    "inversion of control",
    "solid"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "yarn build:lib && yarn build:types",
    "build:lib": "babel --include-dotfiles ./lib --out-dir ./dist --extensions .js,.jsx,.ts,.tsx --source-maps",
    "build:types": "tsc --emitDeclarationOnly",
    "clean:lib": "rimraf ./dist",
    "format": "prettier --write \"{lib,test}/**/*.{js,jsx,ts,tsx}\"",
    "start:dev": "nodemon -e ts --watch \"./lib/**/*.ts\" --exec \"yarn build && yarn touch\"",
    "lint": "eslint \"./lib/**/*\" \"./test/**/*\" ./babel.config.js",
    "test": "jest --notify",
    "touch": "yarn touch:rafter",
    "touch:rafter": "nodetouch ../rafter/lib/index.ts",
    "types": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshystuart/rafter.git"
  },
  "license": "GNU GPLv3",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/core": "7.10.3",
    "@rafterjs/logger-plugin": "^0.4.2-alpha.3",
    "acorn": "7.3.1",
    "awilix": "4.2.6",
    "is-class": "^0.0.9",
    "lodash": "^4.17.15",
    "ts-deepmerge": "^1.0.5"
  },
  "devDependencies": {
    "@rafterjs/babel-preset-rafter": "^0.4.2-alpha.3",
    "@rafterjs/eslint-config": "^0.4.2-alpha.3"
  },
  "engines": {
    "node": ">=9"
  },
  "gitHead": "cec73cfa8cbfe5bd8422f1ea53f1711330514cc3"
}
