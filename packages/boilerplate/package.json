{
  "name": "@rafter/boilerplate",
  "version": "0.1.0",
  "contributors": [
    {
      "name": "Josh Stuart",
      "email": "joshstuartx@gmail.com"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/crimsonronin/rafter.git"
  },
  "scripts": {
    "build": "yarn clean:lib && yarn build:lib && yarn build:config && yarn build:types",
    "build:config": "babel --include-dotfiles config --out-dir dist/config --extensions .js,.jsx,.ts,.tsx --source-maps",
    "build:lib": "babel --include-dotfiles lib --out-dir dist/lib --extensions .js,.jsx,.ts,.tsx --source-maps",
    "build:types": "tsc --emitDeclarationOnly",
    "build:watch": "nodemon --watch \"./lib\" --exec \"yarn build && yarn start\"",
    "clean:lib": "rimraf ./dist",
    "copy": "copyfiles ./package.json ./dist/package.json",
    "format": "prettier --write \"lib/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint \"./config/**/*\" \"./lib/**/*\" lib/index.ts ./dev.js ./babel.config.js",
    "start": "node ./dist/lib/index.js",
    "stop": "echo 'stop'",
    "types": "tsc",
    "update:latest": "yarn upgrade --latest"
  },
  "dependencies": {
    "@rafter/core": "*",
    "@rafter/di-autoloader": "*",
    "@rafter/cors-rafter-plugin": "*"
  },
  "devDependencies": {
    "@rafter/babel-preset-rafter": "*",
    "@rafter/eslint-config": "*"
  },
  "description": "A simple boilerplate to start new projects",
  "main": "./dist/lib/index.js",
  "engines": {
    "node": ">=9"
  }
}
