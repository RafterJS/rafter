{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "yarn install && lerna bootstrap --npm-client=yarn -- --force",
    "start": "node packages/watcher/dist/index.js \"yarn start:boilerplate\"",
    "upgrade:packages": "node packages/lerna-helpers/dist/bin/update.js",
    "upgrade:packages:dev": "node packages/watcher/dist/index.js \"node packages/lerna-helpers/dist/bin/update.js",
    "clean": "lerna clean -y && yarn clean:builds",
    "clean:builds": "lerna exec rimraf dist",
    "build": "lerna run build",
    "build:package": "lerna run build --stream --scope",
    "build:watcher": "yarn build:package @rafterjs/watcher",
    "build:lerna": "yarn build:package @rafterjs/lerna-helpers",
    "build:boilerplate": "cyarn build:package @rafterjs/boilerplate",
    "build:rafter": "yarn build:package rafter",
    "build:cors": "yarn build:package @rafterjs/cors-plugin",
    "build:babel": "yarn build:package @rafterjs/babel-preset-rafter",
    "build:di-autoloader": "yarn build:package @rafterjs/di-autoloader",
    "build:logger": "yarn build:package @rafterjs/logger-plugin",
    "build:mongo": "yarn build:package @rafterjs/mongodb-plugin",
    "build:types": "lerna run build:types",
    "format": "yarn prettier && yarn lint:fix",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "lint:babel-preset-rafter": "cd packages/babel-preset-rafter && yarn lint",
    "lint:core": "cd packages/rafter && yarn lint",
    "lint:rafter-cors-plugin": "cd packages/rafter-cors-plugin && yarn lint",
    "lint:boilerplate": "cd packages/boilerplate && yarn lint",
    "lint:di-autoloader": "cd packages/di-autoloader && yarn lint",
    "lint:eslint-config": "cd packages/eslint-config && yarn lint",
    "lint:utils": "cd packages/utils && yarn lint",
    "lint:mongo": "cd packages/rafter-mongodb-plugin && yarn lint -- --fix",
    "start:boilerplate": "cd packages/boilerplate && yarn start",
    "test": "lerna run test",
    "test:di-autoloader": "cd packages/di-autoloader && yarn test",
    "test:rafter": "cd packages/rafter && yarn test",
    "update:latest": "yarn update:latest:root && yarn update:latest:packages",
    "update:latest:root": "yarn upgrade --latest",
    "update:latest:packages": "lerna exec --stream --parallel -- yarn upgrade --latest"
  },
  "dependencies": {
    "acorn": "8.0.4",
    "dot-prop": ">=6.0.1",
    "is-class": "^0.0.9",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@babel/cli": "7.12.10",
    "@babel/core": "7.12.10",
    "@babel/node": "7.12.10",
    "@lerna/exec": "^3.21.0",
    "@types/eslint-visitor-keys": "^1.0.0",
    "@types/express": "4.17.11",
    "@types/express-serve-static-core": "4.17.18",
    "@types/jest": "26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.22",
    "@types/recursive-readdir": "2.2.0",
    "@types/sinon": "9.0.10",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "@typescript-eslint/parser": "4.14.0",
    "axios": "0.21.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.3",
    "copyfiles": "2.4.1",
    "eslint": "7.18.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "sinon": "9.2.4",
    "touch": "^3.1.0",
    "ts-jest": "26.4.4",
    "ts-mockito": "^2.6.1",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "resolutions": {
    "@babel/core": "7.10.3",
    "axios": "0.19.2",
    "minimist": "1.2.5",
    "kind-of": "6.0.3",
    "acorn": "7.3.1"
  }
}
