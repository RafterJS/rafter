{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client=yarn -- --force",
    "clean": "lerna clean",
    "clean:modules": "lerna run clean:modules",
    "build": "lerna run build",
    "build:boilerplate": "cd packages/boilerplate && yarn build",
    "build:core": "cd packages/core && yarn build",
    "build:babel": "cd packages/babel-preset-rafter && yarn build",
    "build:di-container": "cd packages/di-container && yarn build",
    "build:di-autoloader": "cd packages/di-autoloader && yarn build",
    "build:types": "lerna run build:types",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "lint:babel-preset-rafter": "cd packages/babel-preset-rafter && yarn lint",
    "lint:core": "cd packages/core && yarn lint",
    "lint:cors-rafter-plugin": "cd packages/cors-rafter-plugin && yarn lint",
    "lint:boilerplate": "cd packages/boilerplate && yarn lint",
    "lint:di-container": "cd packages/di-container && yarn lint",
    "lint:di-autoloader": "cd packages/di-autoloader && yarn lint",
    "lint:eslint-config": "cd packages/eslint-config && yarn lint",
    "start": "lerna run start",
    "start:boilerplate": "cd packages/boilerplate && yarn start",
    "stop:boilerplate": "cd packages/boilerplate && yarn stop",
    "test": "lerna run test",
    "test:di-autoloader": "cd packages/di-autoloader && yarn test",
    "test:di-container": "cd packages/di-container && yarn test",
    "test:core": "cd packages/core && yarn test",
    "test:boilerplate": "cd packages/boilerplate && yarn test",
    "update:latest": "yarn upgrade --latest",
    "update:all": "lerna run update:latest"
  },
  "devDependencies": {
    "@babel/cli": "7.7.4",
    "@babel/core": "7.7.4",
