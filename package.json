{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "yarn install && lerna bootstrap --npm-client=yarn -- --force",
    "start": "node packages/watcher/dist/index.js \"yarn start:boilerplate\"",
    "watcher:dev": "lerna run start:dev --stream --scope @rafterjs/watcher",
    "clean": "lerna clean -y",
    "clean:lib": "lerna run clean:lib",
    "build": "lerna run build",
    "build:package": "lerna run build --stream --scope",
    "build:watcher": "yarn build:package @rafterjs/watcher",
    "build:boilerplate": "cd packages/boilerplate && yarn build",
    "build:boilerplate:watch": "cd packages/boilerplate && yarn build:watch",
    "build:local:all": "yarn build:babel && yarn build:di-autoloader && yarn build:rafter && yarn build:rafter-cors-plugin",
    "build:local:boilerplate": "yarn build:rafter && yarn build:rafter-cors-plugin && yarn build:boilerplate",
    "build:rafter": "cd packages/rafter && yarn build",
    "build:rafter:watch": "cd packages/rafter && yarn start:dev",
    "build:cors": "cd packages/rafter-cors-plugin && yarn build",
    "build:babel": "cd packages/babel-preset-rafter && yarn build",
    "build:di-autoloader": "cd packages/di-autoloader && yarn build",
    "build:di-autoloader:watch": "cd packages/di-autoloader && yarn start:dev",
    "build:logger": "cd packages/rafter-logger-plugin && yarn build",
    "build:types": "lerna run build:types",
    "build:mongo": "cd packages/rafter-mongodb-plugin && yarn build",
    "build:test": "cd packages/rafter-test-plugin && yarn build",
    "format": "yarn prettier && yarn lint:fix",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "lint:babel-preset-rafter": "cd packages/babel-preset-rafter && yarn lint",
    "lint:core": "cd packages/rafter && yarn lint",
    "lint:rafter-cors-plugin": "cd packages/rafter-cors-plugin && yarn lint",
    "lint:boilerplate": "cd packages/boilerplate && yarn lint",
    "lint:di-autoloader": "cd packages/di-autoloader && yarn lint",
    "lint:eslint-config": "cd packages/eslint-config && yarn lint",
    "lint:utils": "cd packages/utils && yarn lint",
    "lint:mongo": "cd packages/rafter-mongodb-plugin && yarn lint -- --fix",
    "start:boilerplate": "cd packages/boilerplate && yarn start",
    "test": "lerna run test",
    "test:di-autoloader": "cd packages/di-autoloader && yarn test",
    "test:rafter": "cd packages/rafter && yarn test",
    "update:latest": "yarn upgrade --latest",
    "update:all": "lerna run update:latest",
    "graph": "lerna-dependency-graph"
  },
  "dependencies": {
    "acorn": "7.3.1",
    "dot-prop": "5.2.0",
    "is-class": "0.0.9",
    "lerna-dependency-graph": "1.0.2",
    "lodash": "4.17.19"
  },
  "devDependencies": {
    "@babel/cli": "7.12.10",
    "@babel/core": "7.12.10",
    "@babel/node": "7.12.10",
    "@types/express": "4.17.11",
    "@types/express-serve-static-core": "4.17.7",
    "@types/jest": "26.0.0",
    "@types/lodash": "4.14.156",
    "@types/node": "14.0.13",
    "@types/nodemon": "1.19.0",
    "@types/recursive-readdir": "2.2.0",
    "@types/sinon": "9.0.4",
    "@typescript-eslint/eslint-plugin": "3.4.0",
    "@typescript-eslint/parser": "3.4.0",
    "axios": "0.21.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.0.1",
    "copyfiles": "2.3.0",
    "eslint": "7.3.1",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.0.1",
    "lerna": "3.22.1",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "sinon": "9.0.2",
    "touch": "3.1.0",
    "ts-jest": "26.1.1",
    "ts-mockito": "2.6.1",
    "ts-node": "8.10.2",
    "typescript": "3.9.5"
  },
  "resolutions": {
    "@babel/core": "7.12.10",
    "axios": "0.21.1",
    "minimist": "1.2.5",
    "kind-of": "6.0.3",
    "acorn": "7.3.1"
  }
}
