{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "yarn build:di-container && yarn build:di-autoloader && yarn build:core",
    "build:core": "cd packages/core && yarn build",
    "build:di-container": "cd packages/di-container && yarn build",
    "build:di-autoloader": "cd packages/di-autoloader && yarn build",
    "start": "lerna start",
    "prettier": "prettier --ignore-path \"**/dist/**/*.*\" --write \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test:lint": "eslint \"packages/**/*.{js,jsx}\""
  },
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "@babel/node": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "7.4.3",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "7.1.0",
    "@babel/register": "^7.4.0",
    "@babel/runtime-corejs2": "7.1.2",
    "@types/express": "^4.16.1",
    "@types/express-serve-static-core": "^4.16.4",
    "@types/node": "^11.13.8",
    "@types/recursive-readdir": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.7.1",
    "copyfiles": "2.1.0",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "24.7.1",
    "lerna": "^3.13.4",
    "pm2": "3.5.0",
    "prettier": "1.17.0",
    "rimraf": "2.6.3",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "3.4.5"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
